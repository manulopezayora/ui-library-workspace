{
  "name": "ui-library-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "lib:build": "ng build ngx-manu-ui-library",
    "lib:test": "ng test ngx-manu-ui-library --watch=false",
    "lib:lint": "ng lint ngx-manu-ui-library",
    "lib:publish": "npm run lib:lint && npm run lib:test && npm run lib:build && npm publish dist/ngx-manu-ui-library",
    "testbed:start": "ng serve ngx-manu-ui-library-testbed-app -o",
    "storybook": "ng run ngx-manu-ui-library:storybook",
    "build-storybook": "ng run ngx-manu-ui-library:build-storybook",
    "prepare": "husky"
  },
  "lint-staged": {
    "projects/**/*.{ts,tsx}": [
      "eslint --fix",
      "ng test ngx-manu-ui-library --watch=false --include"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.2101.0",
    "@angular-devkit/build-angular": "^21.1.0",
    "@angular-devkit/core": "^21.1.0",
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.0",
    "@angular/platform-browser-dynamic": "^21.1.0",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@compodoc/compodoc": "^1.2.1",
    "@storybook/addon-a11y": "^10.2.9",
    "@storybook/addon-docs": "^10.2.9",
    "@storybook/addon-onboarding": "^10.2.9",
    "@storybook/angular": "^10.2.9",
    "angular-eslint": "21.2.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.7",
    "ng-packagr": "^21.1.0",
    "storybook": "^10.2.9",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.50.1",
    "vitest": "^4.0.8"
  }
}
